import tkinter as tk
from tkinter import ttk

def check_balance(balance):
    balance_label.config(text="Your current balance is: ₹" + str(balance))

def withdraw(balance):
    amount = int(entry_withdraw.get())

    if amount <= 0 or amount > balance:
        tk.messagebox.showinfo("Invalid Amount", "Please enter a valid amount (balance insufficient).")
        return 0
    else:
        balance -= amount
        check_balance(balance)
        return amount

def deposit():
    amount = int(entry_deposit.get())

    if amount <= 0:
        tk.messagebox.showinfo("Invalid Amount", "Please enter a valid amount.")
        return 0
    else:
        balance += amount
        check_balance(balance)
        return amount

def exit_program():
    if tk.messagebox.askquestion("Exit", "Are you sure you want to exit?") == "yes":
        root.destroy()

# Create the main window
root = tk.Tk()
root.title("Bank Management")
root.configure(bg="#f0f0f0")  # Set background color

# Create style for the application
style = ttk.Style()
style.theme_use("clam")  # Choose a theme (e.g., "clam", "alt", "default")
style.configure("TButton", padding=5, relief="flat", background="#4CAF50", foreground="white")  # Customize button style

# Create labels and entry fields
label_balance = ttk.Label(root, text="Your current balance is: ₹0", style="TLabel")
label_deposit = ttk.Label(root, text="Enter the amount to be deposited:", style="TLabel")
label_withdraw = ttk.Label(root, text="Enter the amount for withdrawal:", style="TLabel")
entry_deposit = ttk.Entry(root, style="TEntry")
entry_withdraw = ttk.Entry(root, style="TEntry")

# Create buttons
button_check_balance = ttk.Button(root, text="Check Balance", style="TButton", command=lambda: check_balance(balance))
button_deposit = ttk.Button(root, text="Deposit", style="TButton", command=lambda: deposit())
button_withdraw = ttk.Button(root, text="Withdraw", style="TButton", command=lambda: withdraw(balance))
button_exit = ttk.Button(root, text="Exit", style="TButton", command=exit_program)

# Grid layout
label_balance.grid(row=0, column=0, columnspan=2)
label_deposit.grid(row=1, column=0)
entry_deposit.grid(row=1, column=1)
button_deposit.grid(row=2, column=0, columnspan=2)
label_withdraw.grid(row=3, column=0)
entry_withdraw.grid(row=3, column=1)
button_withdraw.grid(row=4, column=0, columnspan=2)
button_check_balance.grid(row=5, column=0)
button_exit.grid(row=5, column=1)

# Initialize balance
balance = 0

# Start the main loop
root.mainloop()